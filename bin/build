#!/bin/bash
set -e

# Install system dependencies
apt-get update && apt-get install -y \
    libwoff1 \
    libopus0 \
    libwebp-dev \
    libgudev-1.0-0 \
    libsecret-1-0

# Install Playwright browsers
export PLAYWRIGHT_BROWSERS_PATH=/app/.playwright
npx playwright install --with-deps

# Build
go build -o bin/web -v .
